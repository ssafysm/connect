<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_sheet"
        tools:context=".presentation.views.main.setting.AppThemeBottomSheetFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="16dp" />

        <TextView
            android:id="@+id/tv_title_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardblack"
            android:text="@string/text_theme"
            android:textColor="@color/neutral_100"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/gl_start_app_theme"
            app:layout_constraintTop_toBottomOf="@id/gl_top_app_theme" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_app_theme"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{() -> vm.onClickCloseTheme()}"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/tv_title_app_theme"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/gl_end_app_theme"
            app:layout_constraintTop_toBottomOf="@id/gl_top_app_theme" />

        <TextView
            android:id="@+id/tv_primary_app_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/pretendardregular"
            android:onClick="@{() -> vm.onClickPrimaryTheme()}"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/text_theme_primary"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_app_theme"
            app:layout_constraintStart_toEndOf="@id/gl_start_app_theme"
            app:layout_constraintTop_toBottomOf="@id/tv_title_app_theme" />

        <TextView
            android:id="@+id/tv_spring_app_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:onClick="@{() -> vm.onClickSpringTheme()}"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/text_theme_spring"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_app_theme"
            app:layout_constraintStart_toEndOf="@id/gl_start_app_theme"
            app:layout_constraintTop_toBottomOf="@id/tv_primary_app_theme" />

        <TextView
            android:id="@+id/tv_summer_app_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:onClick="@{() -> vm.onClickSummerTheme()}"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/text_theme_summer"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_app_theme"
            app:layout_constraintStart_toEndOf="@id/gl_start_app_theme"
            app:layout_constraintTop_toBottomOf="@id/tv_spring_app_theme" />

        <TextView
            android:id="@+id/tv_autumn_app_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:onClick="@{() -> vm.onClickAutumnTheme()}"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/text_theme_autumn"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_app_theme"
            app:layout_constraintStart_toEndOf="@id/gl_start_app_theme"
            app:layout_constraintTop_toBottomOf="@id/tv_summer_app_theme" />

        <TextView
            android:id="@+id/tv_winter_app_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:onClick="@{() -> vm.onClickWinterTheme()}"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/text_theme_winter"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/gl_bottom_app_theme"
            app:layout_constraintEnd_toStartOf="@id/gl_end_app_theme"
            app:layout_constraintStart_toEndOf="@id/gl_start_app_theme"
            app:layout_constraintTop_toBottomOf="@id/tv_autumn_app_theme" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>