<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundCustomTheme="@{vm.appThemeName}"
        tools:context=".presentation.views.main.information.InformationFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="32dp" />

        <TextView
            android:id="@+id/tv_title_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardblack"
            android:text="@string/text_information"
            android:textColor="@color/neutral_100"
            android:textSize="32sp"
            app:layout_constraintStart_toEndOf="@id/gl_start_information"
            app:layout_constraintTop_toBottomOf="@id/gl_top_information" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_information"
            app:layout_constraintStart_toEndOf="@id/gl_start_information"
            app:layout_constraintTop_toBottomOf="@id/tv_title_information">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_information"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_id_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_id"
                    android:textColor="@color/neutral_70"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_id_value_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@{vm.user.user.id}"
                    android:textColor="@color/neutral_70"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_id_information" />

                <TextView
                    android:id="@+id/tv_name_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_name"
                    android:textColor="@color/neutral_70"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_id_value_information" />

                <TextView
                    android:id="@+id/tv_name_value_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@{vm.user.user.name}"
                    android:textColor="@color/neutral_70"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_information" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_password_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendardsemibold"
            android:text="@string/text_password"
            android:textColor="@color/neutral_100"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@id/gl_start_information"
            app:layout_constraintTop_toBottomOf="@id/mcv_information" />

        <TextView
            android:id="@+id/tv_password_update_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/pretendardregular"
            android:onClick="@{() -> vm.onClickPassword()}"
            android:text="@string/text_password_update"
            android:textColor="@color/sub_cancel"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_password_information"
            app:layout_constraintEnd_toStartOf="@id/iv_password_update_information"
            app:layout_constraintTop_toTopOf="@id/tv_password_information" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_password_update_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.onClickPassword()}"
            android:src="@drawable/ic_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_password_information"
            app:layout_constraintEnd_toStartOf="@id/gl_end_information"
            app:layout_constraintTop_toTopOf="@id/tv_password_information" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>