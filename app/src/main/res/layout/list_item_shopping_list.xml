<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="product"
            type="com.ssafy.smartstore_jetpack.domain.model.ShoppingCart" />

        <variable
            name="clickListener"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.cart.ShoppingListClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_item_cart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/button_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:photoUrl="@{product.menuImg}" />

        <TextView
            android:id="@+id/tv_name_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendardsemibold"
            android:text="@{product.menuName}"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/tv_price_item_cart"
            app:layout_constraintStart_toEndOf="@id/iv_item_cart"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_count_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_item_cart"
            app:layout_constraintStart_toEndOf="@id/tv_name_item_cart"
            app:layout_constraintTop_toTopOf="@id/tv_name_item_cart" />

        <TextView
            android:id="@+id/tv_price_item_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/neutral_100"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_name_item_cart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
