<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

        <variable
            name="adapter"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.menudetail.CommentAdapter" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:coordinatorCustomTheme="@{vm.appThemeName}"
        tools:context=".detail.DetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_menu_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_title_detail"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/background_banner"
                        android:transitionName="@{`menu_detail_` + vm.selectedProduct.id}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:photoUrl="@{vm.selectedProduct.img}" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.name}"
                        android:textColor="@color/neutral_100"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
                        app:layout_constraintEnd_toStartOf="@id/tv_price_tag_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_title_detail" />

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.name}"
                        android:textColor="@color/neutral_70"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title" />

                    <TextView
                        android:id="@+id/tv_price_tag_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.price}"
                        android:textColor="@color/neutral_100"
                        android:textSize="28sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_title"
                        app:layout_constraintTop_toBottomOf="@id/iv_title_detail" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_detail"
                    style="@style/AppTheme.Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:elevation="10dp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundCustomTheme="@{vm.appThemeName}">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_start_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_top_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="16dp" />

                <TextView
                    android:id="@+id/tv_description_menu_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="진한 에스프레소에 시원한 정수물과 얼음 더하여 스타벅스의 깔끔하고 강렬한 에스프레소를 가장 부드럽고 시원하게 즐길 수 있는 커피"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/gl_top_menu_detail" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_comment_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_description_menu_detail" />

                <TextView
                    android:id="@+id/tv_rating_value_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@{vm.selectedProduct.productRatingAvg}"
                    android:textColor="@color/neutral_100"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/iv_comment_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/iv_comment_menu_detail" />

                <TextView
                    android:id="@+id/tv_rating_end_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_rating_end"
                    android:textColor="@color/neutral_100"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/tv_rating_value_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/iv_comment_menu_detail" />

                <TextView
                    android:id="@+id/tv_rating_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:textColor="@color/neutral_100"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/tv_rating_value_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/iv_comment_menu_detail" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_comment_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shape_comment"
                    android:hint="@string/text_hint_comment"
                    android:text="@={vm.nowComment}"
                    android:textColor="@color/neutral_70"
                    android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toStartOf="@id/btn_enroll_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/iv_comment_menu_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_enroll_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/button_go_order"
                    android:fontFamily="@font/pretendardsemibold"
                    android:onClick="@{() -> vm.onClickSelectRating()}"
                    android:text="@string/text_enroll"
                    android:textColor="@color/neutral_white"
                    android:textSize="20sp"
                    android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@id/et_comment_detail"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/et_comment_detail" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:adapter="@{adapter}"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/gl_bottom_menu_detail"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/et_comment_detail"
                    app:submitData="@{vm.selectedProduct.comments}"
                    tools:listitem="@layout/list_item_comment" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_end_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_bottom_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="144dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/button_enabled3"
            android:padding="16dp"
            android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}">

            <TextView
                android:id="@+id/tv_total_start_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="총"
                android:textColor="@color/neutral_100"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_menu_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/add"
                android:onClick="@{() -> vm.onClickProductCountUp()}"
                app:layout_constraintBottom_toBottomOf="@id/tv_count_menu_detail"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_count_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@{vm.selectProductCount}"
                android:textColor="@color/neutral_100"
                android:textSize="32sp"
                app:layout_constraintEnd_toStartOf="@id/btn_add_menu_detail"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minus_menu_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/minus"
                android:onClick="@{() -> vm.onClickProductCountDown()}"
                app:layout_constraintBottom_toBottomOf="@id/tv_count_menu_detail"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/tv_count_menu_detail"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_cart_menu_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_enabled_2"
                android:fontFamily="@font/pretendardsemibold"
                android:onClick="@{() -> vm.onClickProductToCart()}"
                android:text="@string/text_go_to_cart"
                android:textColor="@color/neutral_white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_order_menu_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_add_menu_detail" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_order_menu_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_enabled_1"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@string/text_go_to_order"
                android:textColor="@color/neutral_white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_add_cart_menu_detail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
