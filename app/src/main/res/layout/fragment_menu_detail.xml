<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

        <variable
            name="adapter"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.menudetail.CommentAdapter" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:coordinatorCustomTheme="@{vm.appThemeName}"
        tools:context=".detail.DetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_menu_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_title_detail"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/coffee_menu_back"
                        android:paddingBottom="32dp"
                        android:src="@drawable/coffee1"
                        android:transitionName="@{`menu_detail_` + vm.selectedProduct.id}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:photoUrl="@{vm.selectedProduct.img}" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.name}"
                        android:textColor="@color/neutral_100"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_title_detail" />

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.name}"
                        android:textColor="@color/neutral_70"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_detail"
                    style="@style/AppTheme.Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:elevation="10dp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:backgroundCustomTheme="@{vm.appThemeName}">

                <TextView
                    android:id="@+id/tv_price_tag_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/eland_choice_b"
                    android:text="@string/text_price"
                    android:textColor="@color/coffee_dark_brown"
                    android:textSize="28sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eland_choice_b"
                    android:text="@{vm.selectedProduct.price}"
                    android:textColor="@color/coffee_dark_brown"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_price_tag_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_price_tag_detail" />

                <TextView
                    android:id="@+id/tv_sum_tag_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/eland_choice_b"
                    android:text="@string/text_count"
                    android:textColor="@color/coffee_dark_brown"
                    android:textSize="28sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price_tag_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_plus_detail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/add"
                    android:backgroundTint="@color/coffee_point_red"
                    android:onClick="@{() -> vm.onClickProductCountUp()}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sum_tag_detail"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_sum_tag_detail" />

                <TextView
                    android:id="@+id/tv_sum_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/eland_choice_b"
                    android:text="@{vm.selectProductCount}"
                    android:textSize="32sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sum_tag_detail"
                    app:layout_constraintEnd_toStartOf="@id/btn_plus_detail"
                    app:layout_constraintTop_toTopOf="@id/tv_sum_tag_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_minus_detail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/minus"
                    android:backgroundTint="@color/coffee_point_red"
                    android:onClick="@{() -> vm.onClickProductCountDown()}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sum_tag_detail"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/tv_sum_detail"
                    app:layout_constraintTop_toTopOf="@id/tv_sum_tag_detail" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_rating_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/coffee_menu_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sum_tag_detail">

                    <TextView
                        android:id="@+id/tv_rating_tag_detail"
                        style="@style/Text.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/eland_choice_b"
                        android:text="@string/text_rating"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_rating_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/eland_choice_b"
                        android:text="@{vm.selectedProduct.productRatingAvg}"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_rating_tag_detail"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RatingBar
                        android:id="@+id/rb_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:isIndicator="true"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_comment_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/textview_regular"
                    android:text="@={vm.nowComment}"
                    app:layout_constraintEnd_toStartOf="@id/btn_enroll_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_rating_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_enroll_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/button_go_order"
                    android:onClick="@{() -> vm.onClickSelectRating()}"
                    android:text="@string/text_enroll"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/et_comment_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_comment_detail" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:adapter="@{adapter}"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/btn_cart_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_comment_detail"
                    app:submitData="@{vm.selectedProduct.comments}"
                    tools:listitem="@layout/list_item_comment" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cart_detail"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_go_order"
                    android:backgroundTint="@color/coffee_point_red"
                    android:onClick="@{() -> vm.onClickProductToCart()}"
                    android:text="@string/text_put_cart"
                    android:textColor="@color/neutral_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
