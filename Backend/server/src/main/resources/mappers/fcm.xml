<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.cafe.model.dao.FcmDao">

    <insert id="insert" parameterType="com.ssafy.cafe.model.dto.Fcm">
        INSERT IGNORE INTO t_fcm (user_id, fcm_token)
        VALUES (#{userId}, #{fcmToken});
    </insert>

    <delete id="delete" parameterType="com.ssafy.cafe.model.dto.Fcm">
        DELETE FROM t_fcm WHERE user_id = #{userId} AND fcm_token = #{fcmToken};
    </delete>

    <select id="selectTokensByUserId" parameterType="String" resultType="String">
        SELECT fcm_token FROM t_fcm WHERE user_id = #{userId};
    </select>

    <select id="selectAllTokens" resultType="String">
        SELECT fcm_token FROM t_fcm;
    </select>
    <select id="selectAllUserIds" resultType="String">
    	SELECT DISTINCT user_id FROM t_fcm;
	</select>

</mapper>
