<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="order"
            type="com.ssafy.smartstore_jetpack.domain.model.Order" />

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_order"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        app:backgroundCustomSubTheme="@{vm.appThemeName}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_order"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_non_color"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="@id/tv_date_order"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_order_number_order" />

        <TextView
            android:id="@+id/tv_order_number_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/neutral_100"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_order"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_list_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:textColor="@color/neutral_100"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_price_order"
            app:layout_constraintEnd_toEndOf="@id/tv_order_number_order"
            app:layout_constraintStart_toStartOf="@id/tv_order_number_order"
            app:layout_constraintTop_toBottomOf="@id/tv_order_number_order" />

        <TextView
            android:id="@+id/tv_price_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:textColor="@color/neutral_100"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_date_order"
            app:layout_constraintEnd_toEndOf="@id/tv_order_number_order"
            app:layout_constraintStart_toStartOf="@id/tv_order_number_order"
            app:layout_constraintTop_toBottomOf="@id/tv_order_list_order" />

        <TextView
            android:id="@+id/tv_date_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:textColor="@color/neutral_100"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/btn_cart_order"
            app:layout_constraintEnd_toEndOf="@id/tv_order_number_order"
            app:layout_constraintStart_toStartOf="@id/tv_order_number_order"
            app:layout_constraintTop_toBottomOf="@id/tv_price_order" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cart_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_button_go_cart"
            android:fontFamily="@font/pretendardsemibold"
            android:onClick="@{() -> vm.onClickOrderDetail(order)}"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/text_go_cart"
            android:textColor="@color/neutral_white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
