<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

        <variable
            name="adapter"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.cart.ShoppingListAdapter" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/fragment_shopping_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".cart.CartFragment">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_start_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/margin_padding_regular" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_top_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/margin_padding_less_larger" />

                <TextView
                    android:id="@+id/tv_title_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardbold"
                    android:text="@string/text_cart"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_title"
                    app:layout_constraintStart_toEndOf="@id/gl_start_cart"
                    app:layout_constraintTop_toBottomOf="@id/gl_top_cart" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_empty_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_empty_coupon"
                    android:visibility="@{(vm.shoppingListUiState.isShoppingListEmpty == true) ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toTopOf="@id/tv_empty_cart"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_cart"
                    app:layout_constraintStart_toEndOf="@id/gl_start_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_empty_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_no_product"
                    android:textAlignment="center"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="@{(vm.shoppingListUiState.isShoppingListEmpty == true) ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_cart"
                    app:layout_constraintStart_toEndOf="@id/gl_start_cart"
                    app:layout_constraintTop_toBottomOf="@id/iv_empty_cart" />

                <TextView
                    android:id="@+id/tv_information_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_normal"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_cart_information"
                    android:textColor="@color/neutral_70"
                    android:textSize="@dimen/font_size_regular"
                    android:visibility="@{(vm.shoppingListUiState.isShoppingListEmpty == true) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_cart"
                    app:layout_constraintStart_toEndOf="@id/gl_start_cart"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_cart" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_normal"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:visibility="@{(vm.shoppingListUiState.isShoppingListEmpty == true) ? View.VISIBLE : View.GONE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_cart"
                    app:layout_constraintStart_toEndOf="@id/gl_start_cart"
                    app:layout_constraintTop_toBottomOf="@id/tv_information_cart"
                    app:submitData="@{vm.shoppingList}"
                    tools:listitem="@layout/list_item_shopping_list" />

                <View
                    android:id="@+id/view_cart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/menu_image_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_cart"
                    app:layout_constraintStart_toEndOf="@id/gl_start_cart"
                    app:layout_constraintTop_toBottomOf="@id/rv_cart" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_end_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/margin_padding_regular" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_bottom_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="@dimen/margin_padding_regular" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/margin_padding_normal"
            android:visibility="@{((vm.shoppingListUiState.shoppingListEmpty == true)) ? View.VISIBLE : View.GONE}"
            app:bottomSheetCustomTheme="@{vm.appThemeName}">

            <TextView
                android:id="@+id/tv_count_title_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@string/text_total_start"
                android:textColor="@color/neutral_100"
                android:textSize="@dimen/font_size_normal"
                app:layout_constraintBottom_toTopOf="@id/mcv_shop_cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@{vm.totalPrice}"
                android:textColor="@color/neutral_100"
                android:textSize="@dimen/font_size_normal"
                app:layout_constraintBottom_toBottomOf="@id/tv_count_title_cart"
                app:layout_constraintStart_toEndOf="@id/tv_count_title_cart"
                app:layout_constraintTop_toTopOf="@id/tv_count_title_cart" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_shop_cart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_regular"
                android:layout_marginTop="@dimen/margin_padding_regular"
                android:layout_marginEnd="@dimen/margin_padding_regular"
                android:layout_marginBottom="@dimen/margin_padding_regular"
                android:onClick="@{() -> vm.onClickShop()}"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="@dimen/card_view_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/mcv_t_out_cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_count_title_cart">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundCustomTheme="@{vm.appThemeName}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_shop_cart"
                        android:layout_width="@dimen/toolbar_button_big"
                        android:layout_height="@dimen/toolbar_button_big"
                        android:src="@drawable/ic_deliver"
                        app:layout_constraintBottom_toTopOf="@id/tv_shop_cart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_shop_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_padding_small"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@string/text_shop"
                        android:textColor="@color/neutral_100"
                        android:textSize="@dimen/font_size_normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_shop_cart" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_t_out_cart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_regular"
                android:layout_marginTop="@dimen/margin_padding_regular"
                android:layout_marginEnd="@dimen/margin_padding_regular"
                android:layout_marginBottom="@dimen/margin_padding_regular"
                android:onClick="@{() -> vm.onClickTakeout()}"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="@dimen/card_view_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mcv_shop_cart"
                app:layout_constraintTop_toBottomOf="@id/tv_count_title_cart">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundCustomTheme="@{vm.appThemeName}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_t_out_cart"
                        android:layout_width="@dimen/toolbar_button_big"
                        android:layout_height="@dimen/toolbar_button_big"
                        android:src="@drawable/ic_t_out"
                        app:layout_constraintBottom_toTopOf="@id/tv_t_out_cart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_t_out_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_padding_small"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@string/text_take_out"
                        android:textColor="@color/neutral_100"
                        android:textSize="@dimen/font_size_normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_t_out_cart" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
