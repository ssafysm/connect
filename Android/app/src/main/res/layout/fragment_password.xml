<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:nestedScrollViewCustomTheme="@{vm.appThemeName}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundCustomTheme="@{vm.appThemeName}"
            tools:context=".presentation.views.main.password.PasswordFragment">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_top_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="32dp" />

            <TextView
                android:id="@+id/tv_title_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardblack"
                android:text="@string/text_password_update"
                android:textColor="@color/neutral_100"
                android:textSize="32sp"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/gl_top_password" />

            <TextView
                android:id="@+id/tv_name_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@{vm.user.user.name}"
                android:textColor="@color/neutral_100"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/tv_title_password" />

            <TextView
                android:id="@+id/tv_name_of_nim_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@string/text_of_nim"
                android:textColor="@color/neutral_100"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_name_password"
                app:layout_constraintStart_toEndOf="@id/tv_name_password"
                app:layout_constraintTop_toTopOf="@id/tv_name_password" />

            <TextView
                android:id="@+id/tv_update_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@string/text_title_update_password"
                android:textColor="@color/neutral_100"
                android:textSize="28sp"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/tv_name_password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:errorEnabled="true"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/tv_update_password"
                app:newPasswordCustomTheme="@{vm.appThemeName}"
                app:passwordToggleEnabled="true"
                app:validatePassword="@{vm.passwordUiState}">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_comment"
                    android:hint="@string/text_hint_new_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:onTextChanged="@{(password, s, b, c) -> vm.validateNewPassword(password)}"
                    android:text="@={vm.newPassword}"
                    android:textColor="@color/neutral_70" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_confirm_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:errorEnabled="true"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/til_password"
                app:newPasswordConfirmCustomTheme="@{vm.appThemeName}"
                app:passwordToggleEnabled="true"
                app:validatePasswordConfirm="@{vm.passwordUiState}">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_comment"
                    android:hint="@string/text_hint_new_password_confirm"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:onTextChanged="@{(passwordConfirm, s, b, c) -> vm.validateNewPasswordConfirm(passwordConfirm)}"
                    android:text="@={vm.newPasswordConfirm}"
                    android:textColor="@color/neutral_70" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_safe_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@string/text_safe_password"
                android:textColor="@color/neutral_100"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/til_confirm_password" />

            <TextView
                android:id="@+id/tv_safe_description_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/pretendardregular"
                android:text="@string/text_safe_password_description"
                android:textColor="@color/neutral_100"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/btn_password"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/tv_safe_password" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@{(vm.passwordUiState.isUpdateBtnEnable == true) ? @drawable/button_order_cancel : @drawable/button_disabled}"
                android:enabled="@{vm.passwordUiState.isUpdateBtnEnable}"
                android:fontFamily="@font/pretendardsemibold"
                android:onClick="@{() -> vm.onClickPasswordUpdate()}"
                android:text="@string/text_password_update"
                android:textColor="@{(vm.passwordUiState.isUpdateBtnEnable == true) ? @color/neutral_white : @color/neutral_100}"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/gl_bottom_password"
                app:layout_constraintEnd_toStartOf="@id/gl_end_password"
                app:layout_constraintStart_toEndOf="@id/gl_start_password"
                app:layout_constraintTop_toBottomOf="@id/tv_safe_description_password" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_bottom_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="144dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>