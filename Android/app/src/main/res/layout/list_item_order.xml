<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="order"
            type="com.ssafy.smartstore_jetpack.domain.model.Order" />

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_order"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="24dp"
        android:onClick="@{() -> vm.onClickOrder(order)}"
        android:padding="16dp"
        app:backgroundCustomSubTheme="@{vm.appThemeName}">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_order"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_non_color"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toTopOf="@id/tv_order_number_order"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_number_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/tv_order_list_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_order" />

        <TextView
            android:id="@+id/tv_order_list_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/tv_price_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_number_order" />

        <TextView
            android:id="@+id/tv_price_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/tv_date_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_list_order" />

        <TextView
            android:id="@+id/tv_date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendardregular"
            android:textColor="@color/neutral_100"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
