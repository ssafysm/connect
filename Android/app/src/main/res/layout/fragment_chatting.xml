<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_chatting"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start_chatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_padding_regular" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top_chatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/margin_padding_regular" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_chatting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding_regular"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_question"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_name_greeting" />

                <TextView
                    android:id="@+id/tv_title_name_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_regular"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@{vm.user.user.name}"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_normal"
                    app:layout_constraintBottom_toTopOf="@id/tv_title_greeting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_title_end_greeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_name_end"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_normal"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title_name_greeting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_title_name_greeting"
                    app:layout_constraintTop_toTopOf="@id/tv_title_name_greeting" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chatting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_padding_small"
            android:layout_marginBottom="@dimen/margin_padding_regular"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/cl_bottom_chatting"
            app:layout_constraintEnd_toStartOf="@id/gl_end_chatting"
            app:layout_constraintStart_toEndOf="@id/gl_start_chatting"
            app:layout_constraintTop_toBottomOf="@id/toolbar_chatting"
            app:stackFromEnd="true"
            app:submitDataChatting="@{vm.chats}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_chatting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:bottomSheetCustomTheme="@{vm.appThemeName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_set_chat"
                android:layout_width="@dimen/btn_cancel_size"
                android:layout_height="@dimen/btn_cancel_size"
                android:layout_marginBottom="@dimen/margin_padding_smaller"
                android:onClick="@{() -> vm.onClickVisibleChatting()}"
                android:src="@{(vm.chattingUiState.isFourButtonsVisible == true) ? @drawable/ic_down : @drawable/ic_up}"
                app:layout_constraintBottom_toTopOf="@id/btn_menu_chat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_menu_chat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_regular"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:layout_marginBottom="@dimen/margin_padding_normal"
                android:enabled="@{vm.chattingUiState.isFourButtonsEnable}"
                android:onClick="@{() -> vm.onClickMenuChatting()}"
                android:visibility="@{(vm.chattingUiState.isFourButtonsVisible == true) ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="@dimen/card_view_elevation"
                app:layout_constraintBottom_toTopOf="@id/et_chatting"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/btn_order_chat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_set_chat">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:chattingMenuButtonCustomTheme="@{vm.appThemeName}"
                    app:enabledCardView="@{vm.chattingUiState.isFourButtonsEnable}">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@string/text_menu_chatting"
                        android:textAlignment="center"
                        android:textColor="@color/neutral_100"
                        android:textSize="@dimen/font_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_order_chat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:enabled="@{vm.chattingUiState.isFourButtonsEnable}"
                android:onClick="@{() -> vm.onClickOrderChatting()}"
                android:visibility="@{(vm.chattingUiState.isFourButtonsVisible == true) ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="@dimen/card_view_elevation"
                app:layout_constraintBottom_toBottomOf="@id/btn_menu_chat"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/btn_shop_chat"
                app:layout_constraintStart_toEndOf="@id/btn_menu_chat"
                app:layout_constraintTop_toTopOf="@id/btn_menu_chat">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:chattingMenuButtonCustomTheme="@{vm.appThemeName}"
                    app:enabledCardView="@{vm.chattingUiState.isFourButtonsEnable}">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@string/text_order_chatting"
                        android:textAlignment="center"
                        android:textColor="@color/neutral_100"
                        android:textSize="@dimen/font_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_shop_chat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:enabled="@{vm.chattingUiState.isFourButtonsEnable}"
                android:onClick="@{() -> vm.onClickShopChatting()}"
                android:visibility="@{(vm.chattingUiState.isFourButtonsVisible == true) ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="@dimen/card_view_elevation"
                app:layout_constraintBottom_toBottomOf="@id/btn_menu_chat"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/btn_plan_chat"
                app:layout_constraintStart_toEndOf="@id/btn_order_chat"
                app:layout_constraintTop_toTopOf="@id/btn_menu_chat">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:chattingMenuButtonCustomTheme="@{vm.appThemeName}"
                    app:enabledCardView="@{vm.chattingUiState.isFourButtonsEnable}">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@string/text_shop_chatting"
                        android:textAlignment="center"
                        android:textColor="@color/neutral_100"
                        android:textSize="@dimen/font_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_plan_chat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_regular"
                android:enabled="@{vm.chattingUiState.isFourButtonsEnable}"
                android:onClick="@{() -> vm.onClickPlanChatting()}"
                android:visibility="@{(vm.chattingUiState.isFourButtonsVisible == true) ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardElevation="@dimen/card_view_elevation"
                app:layout_constraintBottom_toBottomOf="@id/btn_menu_chat"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_shop_chat"
                app:layout_constraintTop_toTopOf="@id/btn_menu_chat">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:chattingMenuButtonCustomTheme="@{vm.appThemeName}"
                    app:enabledCardView="@{vm.chattingUiState.isFourButtonsEnable}">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@string/text_plan_chatting"
                        android:textAlignment="center"
                        android:textColor="@color/neutral_100"
                        android:textSize="@dimen/font_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_chatting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_regular"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:layout_marginBottom="@dimen/margin_padding_regular"
                android:background="@drawable/shape_comment"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/text_hint_chatting"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:onTextChanged="@{(chatMessage, s, b, c) -> vm.validateChatMessage(chatMessage)}"
                android:text="@={vm.chatMessage}"
                android:textColor="@color/neutral_70"
                android:textSize="@dimen/font_size_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_chatting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_submit_chatting"
                app:normalEditText="@{vm.appThemeName}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_chatting"
                android:layout_width="@dimen/toolbar_button_big"
                android:layout_height="@dimen/toolbar_button_big"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginBottom="@dimen/margin_padding_regular"
                android:contentDescription="@string/description_image_upload"
                android:enabled="@{vm.chattingUiState.isChatImageEnable}"
                android:onClick="@{() -> vm.onClickImageChatting()}"
                android:scaleType="centerCrop"
                app:chatImage="@{vm.chatImageUri}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_submit_chatting"
                app:layout_constraintStart_toEndOf="@id/et_chatting" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_chatting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_regular"
                android:layout_marginBottom="@dimen/margin_padding_regular"
                android:enabled="@{vm.chattingUiState.isSubmitBtnEnable}"
                android:fontFamily="@font/pretendardsemibold"
                android:onClick="@{() -> vm.onClickSendChatting()}"
                android:text="@string/text_send"
                android:textColor="@{(vm.chattingUiState.isSubmitBtnEnable == true) ? @color/neutral_white : @color/neutral_100}"
                android:textSize="@dimen/font_size_regular"
                app:enableChatting="@{vm.chattingUiState}"
                app:enableChattingCustomTheme="@{vm.appThemeName}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_chatting" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_chatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_padding_regular" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom_chatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/margin_padding_regular" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
