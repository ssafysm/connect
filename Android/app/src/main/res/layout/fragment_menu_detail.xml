<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

        <variable
            name="adapter"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.menudetail.CommentAdapter" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cdl_menu_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:coordinatorCustomTheme="@{vm.appThemeName}"
        tools:context=".detail.DetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_menu_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:collapsedTitleGravity="center"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleGravity="center"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_title_detail"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/background_banner"
                        android:transitionName="@{`menu_detail_` + vm.selectedProduct.id}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:photoUrl="@{vm.selectedProduct.img}" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.name}"
                        android:textColor="@color/neutral_100"
                        android:textSize="32sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
                        app:layout_constraintEnd_toStartOf="@id/tv_price_tag_detail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_title_detail" />

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.name}"
                        android:textColor="@color/neutral_70"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title" />

                    <TextView
                        android:id="@+id/tv_price_tag_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:text="@{vm.selectedProduct.price}"
                        android:textColor="@color/neutral_100"
                        android:textSize="28sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_title"
                        app:layout_constraintTop_toBottomOf="@id/iv_title_detail" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_detail"
                    style="@style/AppTheme.Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:elevation="10dp"
                    android:fitsSystemWindows="true"
                    android:textAlignment="center"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:nestedScrollViewCustomTheme="@{vm.appThemeName}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundCustomTheme="@{vm.appThemeName}">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_start_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/margin_padding_regular" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_top_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/margin_padding_regular" />

                <TextView
                    android:id="@+id/tv_description_menu_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardregular"
                    android:text="@{vm.selectedProduct.description}"
                    android:textSize="@dimen/font_size_regular"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/gl_top_menu_detail" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_comment_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_regular"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_description_menu_detail" />

                <TextView
                    android:id="@+id/tv_rating_value_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@{vm.selectedProduct.productRatingAvg}"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_subtitle"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/iv_comment_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/iv_comment_menu_detail" />

                <TextView
                    android:id="@+id/tv_rating_end_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_rating_end"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_normal"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/tv_rating_value_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/iv_comment_menu_detail" />

                <TextView
                    android:id="@+id/tv_rating_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:textColor="@color/neutral_100"
                    android:textSize="@dimen/font_size_normal"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/tv_rating_value_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/iv_comment_menu_detail" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_comment_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:layout_marginEnd="@dimen/margin_padding_small"
                    android:background="@drawable/shape_comment"
                    android:enabled="@{(vm.user == null) ? false : true}"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/text_hint_comment"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:onTextChanged="@{(nowComment, s, b, c) -> vm.validateComment(nowComment)}"
                    android:text="@={vm.nowComment}"
                    android:textColor="@color/neutral_70"
                    android:textSize="@dimen/font_size_regular"
                    android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toTopOf="@id/barrier_detail"
                    app:layout_constraintEnd_toStartOf="@id/btn_enroll_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/iv_comment_menu_detail"
                    app:normalEditText="@{vm.appThemeName}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_enroll_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:enabled="@{vm.menuDetailUiState.isEnrollBtnEnable}"
                    android:fontFamily="@font/pretendardsemibold"
                    android:onClick="@{() -> vm.onClickSelectRating()}"
                    android:text="@string/text_enroll"
                    android:textColor="@{(vm.menuDetailUiState.isEnrollBtnEnable == true) ? @color/neutral_white : @color/neutral_100}"
                    android:textSize="@dimen/font_size_regular"
                    android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}"
                    app:enableComment="@{vm.menuDetailUiState}"
                    app:enableMenuDetailCustomTheme="@{vm.appThemeName}"
                    app:layout_constraintBottom_toBottomOf="@id/et_comment_detail"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintTop_toTopOf="@id/et_comment_detail" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_detail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierAllowsGoneWidgets="true"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="et_comment_detail,btn_enroll_detail" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:adapter="@{adapter}"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/margin_padding_large"
                    android:visibility="@{(vm.selectedProduct.comments.isEmpty()) ? View.GONE : View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/barrier_detail"
                    app:submitData="@{vm.selectedProduct.comments}"
                    tools:listitem="@layout/list_item_comment" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_empty_comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_normal"
                    android:src="@drawable/ic_empty_coupon"
                    android:visibility="@{(vm.selectedProduct.comments.isEmpty()) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/barrier_detail"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_empty_comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@{vm.selectedProduct.name}"
                    android:textAlignment="center"
                    android:textColor="@color/neutral_70"
                    android:textSize="@dimen/font_size_regular"
                    android:visibility="@{(vm.selectedProduct.comments.isEmpty()) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toTopOf="@id/view_detail"
                    app:layout_constraintEnd_toStartOf="@id/tv_empty_comment_end_detail"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/gl_start_menu_detail"
                    app:layout_constraintTop_toBottomOf="@id/iv_empty_comment_detail" />

                <TextView
                    android:id="@+id/tv_empty_comment_end_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="@string/text_empty_comment"
                    android:textAlignment="center"
                    android:textColor="@color/neutral_70"
                    android:textSize="@dimen/font_size_regular"
                    android:visibility="@{(vm.selectedProduct.comments.isEmpty()) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_empty_comment_detail"
                    app:layout_constraintEnd_toStartOf="@id/gl_end_menu_detail"
                    app:layout_constraintStart_toEndOf="@id/tv_empty_comment_detail"
                    app:layout_constraintTop_toTopOf="@id/tv_empty_comment_detail" />

                <View
                    android:id="@+id/view_detail"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_detail" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_end_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/margin_padding_regular" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_bottom_menu_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="@dimen/margin_padding_regular" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/margin_padding_normal"
            android:visibility="@{(vm.user == null) ? View.GONE : View.VISIBLE}"
            app:bottomSheetCustomTheme="@{vm.appThemeName}">

            <TextView
                android:id="@+id/tv_total_start_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@string/text_total_start"
                android:textColor="@color/neutral_100"
                android:textSize="@dimen/font_size_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_total_price_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@{vm.selectedProductPrice}"
                android:textColor="@color/neutral_100"
                android:textSize="@dimen/font_size_normal"
                app:layout_constraintBottom_toBottomOf="@id/tv_total_start_menu_detail"
                app:layout_constraintStart_toEndOf="@id/tv_total_start_menu_detail"
                app:layout_constraintTop_toTopOf="@id/tv_total_start_menu_detail" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_menu_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/add"
                android:onClick="@{() -> vm.onClickProductCountUp()}"
                app:layout_constraintBottom_toBottomOf="@id/tv_count_menu_detail"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_count_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:fontFamily="@font/pretendardsemibold"
                android:text="@{vm.selectProductCount}"
                android:textColor="@color/neutral_100"
                android:textSize="@dimen/font_size_normal"
                app:layout_constraintEnd_toStartOf="@id/btn_add_menu_detail"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minus_menu_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:background="@drawable/minus"
                android:onClick="@{() -> vm.onClickProductCountDown()}"
                app:layout_constraintBottom_toBottomOf="@id/tv_count_menu_detail"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/tv_count_menu_detail"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_cart_menu_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_normal"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:background="@drawable/button_enabled_2"
                android:fontFamily="@font/pretendardsemibold"
                android:onClick="@{() -> vm.onClickProductToCart()}"
                android:text="@string/text_go_to_cart"
                android:textColor="@color/neutral_white"
                android:textSize="@dimen/font_size_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_add_menu_detail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
