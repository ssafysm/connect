<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.ssafy.smartstore_jetpack.presentation.views.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundCustomTheme="@{vm.appThemeName}"
        tools:context=".presentation.views.main.coupondetail.CouponDetailFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="32dp" />

        <TextView
            android:id="@+id/tv_title_coupon_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardblack"
            android:text="쿠폰 상세 정보"
            android:textColor="@color/neutral_100"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_coupon_detail"
            app:layout_constraintStart_toEndOf="@id/gl_start_coupon_detail"
            app:layout_constraintTop_toBottomOf="@id/gl_top_coupon_detail" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_coupon_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:eventImage="@{vm.selectedCoupon.image}"
            app:layout_constraintEnd_toStartOf="@id/gl_end_coupon_detail"
            app:layout_constraintStart_toEndOf="@id/gl_start_coupon_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_title_coupon_detail" />

        <TextView
            android:id="@+id/tv_name_coupon_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendardsemibold"
            android:text="@{vm.selectedCoupon.name}"
            android:textColor="@color/neutral_100"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_coupon_detail"
            app:layout_constraintStart_toEndOf="@id/gl_start_coupon_detail"
            app:layout_constraintTop_toBottomOf="@id/iv_coupon_detail" />

        <TextView
            android:id="@+id/tv_price_coupon_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/pretendardsemibold"
            android:text="@{vm.selectedCoupon.price}"
            android:textColor="@color/neutral_70"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_coupon_detail"
            app:layout_constraintStart_toEndOf="@id/gl_start_coupon_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_name_coupon_detail" />

        <TextView
            android:id="@+id/tv_time_coupon_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendardregular"
            android:text="@{vm.selectedCoupon.couponTime}"
            android:textColor="@color/neutral_70"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/gl_end_coupon_detail"
            app:layout_constraintStart_toEndOf="@id/gl_start_coupon_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_price_coupon_detail" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>