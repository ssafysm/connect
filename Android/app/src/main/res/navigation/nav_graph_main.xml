<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_chatting"
            app:destination="@id/fragment_chatting" />

        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/fragment_login" />

        <action
            android:id="@+id/action_home_to_join"
            app:destination="@id/fragment_join" />

        <action
            android:id="@+id/action_home_to_order_detail"
            app:destination="@id/fragment_cart" />

        <action
            android:id="@+id/action_home_to_notice"
            app:destination="@id/fragment_notice" />

    </fragment>

    <fragment
        android:id="@+id/fragment_chatting"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.chatting.ChattingFragment"
        android:label="Chatting"
        tools:layout="@layout/fragment_chatting">

        <action
            android:id="@+id/action_chatting_to_plan_first"
            app:destination="@id/fragment_chatting_plan_first" />

        <action
            android:id="@+id/action_chatting_to_plan_progress"
            app:destination="@id/fragment_chatting_plan_progress" />

    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_join"
            app:destination="@id/fragment_join" />

    </fragment>

    <fragment
        android:id="@+id/fragment_join"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.join.JoinFragment"
        android:label="Join"
        app:popUpTo="@id/fragment_login"
        tools:layout="@layout/fragment_join">

        <action
            android:id="@+id/action_join_to_login"
            app:destination="@id/fragment_login"
            app:popUpTo="@id/fragment_join"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/fragment_order"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.order.OrderFragment"
        android:label="Order"
        tools:layout="@layout/fragment_order">

        <action
            android:id="@+id/action_order_to_detail"
            app:destination="@id/fragment_detail"
            app:launchSingleTop="true"
            app:popUpToInclusive="false" />

        <action
            android:id="@+id/action_order_to_cart"
            app:destination="@id/fragment_cart" />

    </fragment>

    <fragment
        android:id="@+id/fragment_my_page"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.my.MyPageFragment"
        android:label="My Page"
        tools:layout="@layout/fragment_mypage">

        <action
            android:id="@+id/action_my_page_to_login"
            app:destination="@id/fragment_login" />

        <action
            android:id="@+id/action_my_page_to_join"
            app:destination="@id/fragment_join" />

        <action
            android:id="@+id/action_my_page_to_setting"
            app:destination="@id/fragment_setting" />

        <action
            android:id="@+id/action_my_page_to_history"
            app:destination="@id/fragment_history" />

        <action
            android:id="@+id/action_my_page_to_information"
            app:destination="@id/fragment_information" />

        <action
            android:id="@+id/action_my_page_to_coupon"
            app:destination="@id/fragment_coupon" />

        <action
            android:id="@+id/action_my_page_to_pay"
            app:destination="@id/fragment_pay" />

        <action
            android:id="@+id/action_my_page_to_attendance"
            app:destination="@id/fragment_attendance" />

    </fragment>

    <fragment
        android:id="@+id/fragment_notice"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.notice.NoticeFragment"
        android:label="Notice"
        tools:layout="@layout/fragment_notice" />

    <fragment
        android:id="@+id/fragment_history"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history">

        <action
            android:id="@+id/action_history_to_order_detail"
            app:destination="@id/fragment_order_detail" />

    </fragment>

    <fragment
        android:id="@+id/fragment_information"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.information.InformationFragment"
        android:label="Information"
        tools:layout="@layout/fragment_information">

        <action
            android:id="@+id/action_information_to_password"
            app:destination="@id/fragment_password" />

    </fragment>

    <fragment
        android:id="@+id/fragment_coupon"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.coupon.CouponFragment"
        android:label="Coupon"
        tools:layout="@layout/fragment_coupon">

        <action
            android:id="@+id/action_coupon_to_coupon_detail"
            app:destination="@id/fragment_coupon_detail" />

    </fragment>

    <fragment
        android:id="@+id/fragment_coupon_detail"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.coupondetail.CouponDetailFragment"
        android:label="Coupon Detail"
        tools:layout="@layout/fragment_coupon">

        <action
            android:id="@+id/action_coupon_detail_to_shop_select"
            app:destination="@id/fragment_shop_select_bottom_sheet_dialog" />

    </fragment>

    <fragment
        android:id="@+id/fragment_pay"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.pay.PayFragment"
        android:label="Pay"
        tools:layout="@layout/fragment_pay" />

    <fragment
        android:id="@+id/fragment_attendance"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.attendance.AttendanceFragment"
        android:label="Attendance"
        tools:layout="@layout/fragment_attendance" />

    <fragment
        android:id="@+id/fragment_password"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.password.PasswordFragment"
        android:label="Password"
        tools:layout="@layout/fragment_password" />

    <fragment
        android:id="@+id/fragment_setting"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.setting.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting">

        <action
            android:id="@+id/action_setting_to_app_theme"
            app:destination="@id/fragment_app_theme_bottom_sheet" />

    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.menudetail.MenuDetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_menu_detail">

        <action
            android:id="@+id/action_detail_to_order"
            app:destination="@id/fragment_order"
            app:popUpTo="@id/fragment_detail"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/detail_to_rating_dialog"
            app:destination="@id/fragment_rating_dialog" />

    </fragment>

    <fragment
        android:id="@+id/fragment_cart"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.cart.ShoppingListFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_shopping_list">

        <action
            android:id="@+id/cart_to_shop_select"
            app:destination="@id/fragment_shop_select_bottom_sheet_dialog" />

    </fragment>

    <fragment
        android:id="@+id/fragment_order_detail"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.orderdetail.OrderDetailFragment"
        android:label="Order Detail"
        tools:layout="@layout/fragment_order_detail" />

    <dialog
        android:id="@+id/fragment_app_theme_bottom_sheet"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.setting.AppThemeBottomSheetFragment"
        android:label="App Theme"
        tools:layout="@layout/fragment_app_theme_bottom_sheet" />

    <dialog
        android:id="@+id/fragment_shop_select_bottom_sheet_dialog"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.cart.ShopSelectBottomSheetDialogFragment"
        android:label="Shop Select"
        tools:layout="@layout/fragment_shop_select_bottom_sheet_dialog">

        <action
            android:id="@+id/action_shop_select_to_shop_dialog"
            app:destination="@id/fragment_shop_dialog" />

        <action
            android:id="@+id/action_shop_select_to_t_out_dialog"
            app:destination="@id/fragment_t_out_dialog" />

    </dialog>

    <dialog
        android:id="@+id/fragment_shop_dialog"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.cart.ShopDialogFragment"
        android:label="Shop Dialog"
        tools:layout="@layout/fragment_shop_dialog" />

    <dialog
        android:id="@+id/fragment_t_out_dialog"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.cart.TOutDialogFragment"
        android:label="T Out Dialog"
        tools:layout="@layout/fragment_t_out_dialog" />

    <dialog
        android:id="@+id/fragment_rating_dialog"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.menudetail.RatingDialogFragment"
        android:label="Rating Dialog"
        tools:layout="@layout/fragment_rating_dialog" />

    <dialog
        android:id="@+id/fragment_chatting_plan_first"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.chatting.ChattingPlanFirstFragment"
        android:label="Chatting Plan First"
        tools:layout="@layout/fragment_chatting_plan_first">

        <action
            android:id="@+id/action_plan_first_to_second"
            app:destination="@id/fragment_chatting_plan_second" />

    </dialog>

    <dialog
        android:id="@+id/fragment_chatting_plan_second"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.chatting.ChattingPlanSecondFragment"
        android:label="Chatting Plan Second"
        tools:layout="@layout/fragment_chatting_plan_second" />

    <dialog
        android:id="@+id/fragment_chatting_plan_progress"
        android:name="com.ssafy.smartstore_jetpack.presentation.views.main.chatting.PlanProgressFragment"
        android:label="Plan Progress"
        tools:layout="@layout/fragment_plan_progress" />

</navigation>
